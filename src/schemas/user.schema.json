{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "user.schema.json",
  "type": "object",
  "properties": {
    "id": {
      "type": "number"
    },
    "kind": {
      "const": "user"
    },
    "permalink_url": {
      "type": "string"
    },
    "username": {
      "type": "string"
    }
